<%= render 'layouts/shared/header' %>

<div class="container mt-5">
  <div class="row align-items-cennter">
    <% if user_signed_in?%>
      <div class="col-md-6 p-md-4 offset-md-3 border-5 rounded-5 bg-info">
        <h4> Que ce ta pensando </h4>
        <%= form_with model: @post, url: posts_path do |form|  %>
          <div class='form-group'>
            <div class="input-group mb-3">
              <%= form.text_area :body, class: "form-control rows=", aria_describedby: "button-addon1" %>
            </div>
            <input type="file" class="form-control-file">
            <%= form.submit 'Publicar', class: "btn btn-outline-dark mb-2 px-5 mt-3", id: "button-addon1" %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<% @posts.each do |post| %>
  <div class="card mt-5 col-md-4 mx-auto col-lg-9">

    <div class="card-body">
      <p class="card-text"><%= post.text %></p>
       
      <div class="d-grid gap-1 d-md-flex justify-content-md-end">
    
      </div>
    </div>
  </div>
<% end %>

<div class="pagination justify-content-center mt-5 py-5">
  <%= paginate @posts %>
</div>
