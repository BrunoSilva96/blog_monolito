<section class='py-5 mt-2'> 
  <div class="container mt-5 mb-5 py-5">
    <div class="row align-items-center py-4" >
      <div class="col-md-4 mx-auto col-lg-5 mt-5" >
        <div class="p-4 p-md-5 border rounded-5 bg-info" data-aos="flip-right" data-aos-duration="1300">

        <h2 class='text-dark'><%= t('devise.passwords.new.forgot_your_password') %></h2>

        <%= form_for(resource, as: resource_name, url: update_password_settings_path(resource_name), html: { method: :patch }) do |f| %>
          <div class="form-group text-dark mt-2 my-2" >
            <%= f.label :email, t('activerecord.attributes.author.email'), class:'mb-2' %><br />
            <%= f.email_field :email, class: "form-control", autofocus: true %>
          </div>

            <div class="actions">
              <%= f.submit t('devise.passwords.new.send_me_reset_password_instructions'), class: "btn btn-dark"  %>
            </div>
        <% end %>

        <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</section>
