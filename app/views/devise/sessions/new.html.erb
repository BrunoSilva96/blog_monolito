<section class='py-5 mt-2'>
  <div class="container mt-5 mb-5 py-5">
    <div class="row align-items-center py-4" >
      <div class="col-md-4 mx-auto col-lg-5 mt-5" >
        <div class="p-4 p-md-5 border rounded-5 bg-info" data-aos="flip-right" data-aos-duration="1300">

        <h2 class='text-dark'><%= t('devise.sessions.new.sign_in') %></h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group text-dark mt-2" >
            <%= f.label :email, class:'mb-2' %><br />
            <%= f.email_field :email, class: "form-control", autofocus: true %>
          </div>

          <div class="form-group text-dark mt-2">
            <%= f.label :password, class: 'mb-2' %><br />
            <%= f.password_field :password, class: "form-control"%>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-group my-2">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit t("devise.sessions.new.sign_in"), class: "btn btn-dark" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</section>