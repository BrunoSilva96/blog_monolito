<section class='py-5'>
  <div class="container mt-5 mb-5 py-4">
    <div class="row align-items-center" >
      <div class="col-md-4 mx-auto col-lg-5 mt-5" >
        <div class="p-4 p-md-5 border rounded-5 bg-info" data-aos="flip-left" data-aos-duration="1000">
        <%= render "devise/shared/error_messages", resource: resource %>

        <h2 class='text-dark'> Sign up </h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="form-group text-dark mt-2" >
            <%= f.label :email, class:'mb-2' %><br />
            <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
          </div>

            <div class="form-group text-dark mt-2">
              <%= f.label :name, class: 'mb-2' %><br />
              <%= f.text_field :name, class: "form-control", autofocus: true, autocomplete: "nome" %>
            </div>

          <div class="form-group text-dark mt-2">
            <%= f.label :password, class: 'mb-2' %><br />
            <%= f.password_field :password, class: "form-control" %>
          </div>

          <div class="form-group text-dark mt-2">
            <%= f.label :password_confirmation, class: 'mb-2' %><br />
            <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
          </div>

          <div class="actions">
            <%= f.submit "Sign up", class: "btn btn-dark mt-3" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</section>