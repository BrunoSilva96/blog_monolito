<section class="py-5">
  <div class="container px-4 px-lg-5 mt-5">
    <div class="row">
      <div class="col-3">
        <div class="card">
          <%= render 'settings/menu_update' %>
        </div>
      </div>
      <div class="col-9 ">
        <div class="card rounded-5 bg-info border" data-aos="fade-down" data-aos-duration="1700">
          <div class="card-body mt-4">
            <h2><%= current_user.name %></h2>
            <%= image_tag user_avatar_url(current_user), class: 'mb-4 rounded-circle', width: 120 %>
              
            <%= form_for current_user, url: update_user_settings_path, data: {turbo: false } do |f|%>
              <div class="form-group text-dark mt-2" >
                <%= f.file_field :avatar, input_html: { class: 'input_image' } %>
              </div>
              <p>Escolha uma imagem de perfil</p>
              <div class="form-group text-dark mt-2" >
                <%= f.label :email, class:'mb-2' %><br />
                <%= f.email_field :email, readonly: true, class: "form-control", autocomplete: "email" %>
              </div>
                  <div class="form-group text-dark mt-2">
                <%= f.label :name, class: 'mb-2' %><br />
                <%= f.text_field :name, class: "form-control", autofocus: true, autocomplete: "name" %>
              </div>
                  <div class="field">
                <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
                <%= f.password_field :current_password, class: "form-control" %>
              </div>
                  <div class="actions">
                <%= f.submit "Update", class: 'px-3 mt-4 btn btn-success' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>      
  </div>
</section>